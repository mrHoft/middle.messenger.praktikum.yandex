{
	"name": "my-webpack-project",
	"version": "1.0.0",
	"description": "My webpack project",
	"author": "Hoft",
	"deploy": "https://pet-chat.netlify.app/",
	"default": "src/index.html",
	"private": true,
	"scripts": {
		"start": "webpack serve",
		"test": "jest",
		"lint": "eslint --fix --ext .ts",
		"del": "rm -rf dist/",
		"build": "webpack --mode=development",
		"build:prod": "webpack --mode=production --node-env=production",
		"watch": "webpack --watch"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm-run-all test lint",
			"pre-push": "npm run test"
		}
	},
	"directories": {
		"src": "./src",
		"test": "./test"
	},
	"repository": {
		"type": "git",
		"url": "github:https://github.com/mrHoft/middle.messenger.praktikum.yandex.git"
	},
	"keywords": [
		"chat",
		"messenger"
	],
	"license": "ISC",
	"bugs": "https://github.com/mrHoft/middle.messenger.praktikum.yandex/issues",
	"homepage": "https://github.com/mrHoft/middle.messenger.praktikum.yandex#readme",
	"engines": {
		"node": ">=12.0.0"
	},
	"targets": {
		"default": {
			"distDir": "./dist",
			"sourceMap": false,
			"engines": {
				"browsers": ">=50%"
			}
		}
	},
	"# dependencies": "Modules that will be needed to WebPack inside Docker container",
	"# depInstall": "npm install --omit=dev",
	"dependencies": {
		"@types/uuid": "9.0.0",
		"copy-webpack-plugin": "11.0.0",
		"css-loader": "6.7.1",
		"express": "4.18.2",
		"html-webpack-plugin": "5.5.0",
		"mini-css-extract-plugin": "2.6.1",
		"postcss": "8.4.20",
		"postcss-loader": "7.0.0",
		"postcss-modules": "4.3.1",
		"postcss-simple-vars": "7.0.1",
		"prettier": "2.8.4",
		"raw-loader": "4.0.2",
		"style-loader": "3.3.1",
		"stylelint": "14.16.1",
		"stylelint-config-standard": "29.0.0",
		"ts-loader": "9.4.2",
		"typescript": "4.9.4",
		"uuid": "9.0.0",
		"webpack": "5.75.0",
		"webpack-cli": "5.0.1"
	},
	"# devDependencies": "Modules used only in developement",
	"# devInstall": "npm install --dev",
	"devDependencies": {
		"@jest/globals": "29.4.3",
		"@types/jest": "29.4.0",
		"autoprefixer": "10.4.13",
		"eslint": "8.31.0",
		"eslint-config-airbnb": "19.0.4",
		"eslint-config-airbnb-typescript": "17.0.0",
		"husky": "8.0.3",
		"jest-environment-jsdom": "29.4.3",
		"npm-run-all": "4.1.5",
		"ts-jest": "29.0.5",
		"webpack-dev-server": "4.11.1"
	}
}
